{
  "manifest_version": 3,
  "name": "Element Summarizer",
  "description": "Highlight any DOM element and get a ChatGPT summary of its text.",
  "version": "1.0.1",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://api.openai.com/*"
  ],
  "background": {
    "service_worker": "service_worker.js"
  },
  "action": {
    "default_title": "Summarize element (Click) · Options (Right‑click)",
    "default_icon": "icon.png"
  },
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["ui.css"],
      "run_at": "document_idle"
    }
  ]
}
